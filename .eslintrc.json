{
    "extends": "standard",
    "overrides": [
      {
        "files": ["*spec.js", "*.spec.jsx", "test/**/*.js"],
        "rules": {
          "no-unused-expressions": "off",
          "no-unused-vars": "off"
        },
        "globals": {
          "describe": false,
          "test": false,
          "shallow": false,
          "mount": false,
          "React": false,
          "beforeEach": false,
          "afterEach": false,
          "beforeAll": false,
          "afterAll": false,
          "before": false,
          "after": false,
          "expect": false,
          "jest": false,
          "it": false,
          "localStorage": false
        }
      },
      {
        "files": ["**/*.jsx"],
        "rules": {
          "no-unused-vars": "off"
        },
        "globals": {
          "localStorage": false
        }
      },
      {
        "files": ["scripts/*/*.jsx"],
        "rules": {
          "no-unused-vars": "off",
          "no-global-assign": "off"
        },
        "globals": {
          "XMLHttpRequest": false
        }
      }
    ]
}
